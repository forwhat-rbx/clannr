generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:qbotdata.db"
}

model User {
  id             String    @id @default(uuid())
  robloxId       String    @unique
  xp             Int       @default(0)
  raids          Int       @default(0)
  defenses       Int       @default(0)
  scrims         Int       @default(0)
  trainings      Int       @default(0)
  suspendedUntil DateTime?
  unsuspendRank  Int?
  isBanned       Boolean   @default(false)
  xpLogs         XpLog[]

  lastRaid       DateTime?
  lastDefense    DateTime?
  lastScrim      DateTime?
  lastTraining   DateTime?
  lastActivity   DateTime?
}

model XpLog {
  id        String   @id @default(uuid())
  robloxId  String   
  amount    Int
  reason    String?
  timestamp DateTime @default(now())
  user      User     @relation(fields: [robloxId], references: [robloxId])
}

model UserLink {
  id            String   @id @default(uuid())
  discordId     String   @unique
  robloxId      String
  verifiedAt    DateTime @default(now())
}

model RoleBind {
  id             String   @id @default(uuid())
  guildId        String
  discordRoleId  String
  minRankId      Int
  maxRankId      Int
  robloxRankName String
  rolesToRemoveJson String? @default("[]") // Store as JSON string instead of array

  @@unique([guildId, discordRoleId])
}

model GuildConfig {
  id                   String   @id
  guildId              String   @unique
  nicknameFormat       String   @default("{robloxUsername}")
  verifiedRoleId       String?
  autoUpdateEnabled    Boolean  @default(true)
  verificationChannelId String?
  verificationMessageId String?
}